#include <iostream>
using namespace std;

int main() {
    int m;
    cin>>m;
    if(m<=2)
    {
        return 0;
    }
    else
    {

        for(int i=0; i<m; i++)
        {
            if(i==0 || i==m-1) {
                for (int j = 0; j <= m-1; j++) {

                    if (j == 0 || j == m-1) {
                        cout << "%";
                    } else {
                        cout << "@";
                    }
                }
                cout<<endl;
            }

            else
            {
                for (int j = 0; j <=m-1; j++) {

                    if (j == 0 || j == m-1) {
                        cout << "%";
                    } else {
                        cout << ".";
                    }
                }
                cout<<endl;
            }
        }
    }
    return 0;
}
