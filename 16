#include <iostream>
#include <string>
using namespace std;

int main() {
    int n, m;
    cin>>n;
    if(n<2)
    {
        return 0;
    }
    else
    {
        for(int i=0; i<=n-1; i++)
        {
            for(int j=0; j<=n-1; j++)
            {
                if(i==0 || i==n-1)
                {
                    cout<<"+";
                }
                else {
                    if (j == 0 || j == n-1) {
                        cout << "+";
                    } else {
                        cout << "-";
                    }
                }
            }
            cout<<endl;
        }

    }
    return 0;
}
